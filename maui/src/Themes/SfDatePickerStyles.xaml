<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:picker="clr-namespace:Syncfusion.Maui.Toolkit.Picker"
             x:Class="Syncfusion.Maui.Toolkit.Picker.SfDatePickerStyles">

    <Style TargetType="picker:SfDatePicker">
        <Setter Property="ColumnDividerColor" Value="{DynamicResource SfDatePickerNormalColumnDividerColor}" />
    </Style>

    <Style TargetType="picker:DatePickerColumnHeaderView">
        <Setter Property="Background"  Value="{DynamicResource SfDatePickerNormalColumnHeaderBackground}"/>
        <Setter Property="DividerColor"  Value="{DynamicResource SfDatePickerNormalColumnHeaderDividerColor}"/>

        <Setter Property="TextStyle">
            <Setter.Value>
                <picker:PickerTextStyle TextColor="{DynamicResource SfDatePickerNormalColumnHeaderTextColor}" FontSize="{DynamicResource SfDatePickerNormalColumnHeaderFontSize}"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>